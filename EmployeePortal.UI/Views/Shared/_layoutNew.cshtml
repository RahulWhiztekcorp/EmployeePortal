<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Your Application Name</title>
    <link rel="stylesheet" href="site.css">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="logo">
                <a href="/">Your Logo</a>
            </div>
            <nav class="main-menu">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/services">Services</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </nav>
            <div class="user-info">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>Welcome, @User.Identity.Name!</span>
                    <a href="/account/logout">Logout</a>
                }
                else
                {
                    <a href="/account/login">Login</a>
                    <a href="/account/register">Register</a>
                }
            </div>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        &copy; @DateTime.Now.Year Your Application Name
    </footer>
</body>
</html>
