@model IEnumerable<EmployeePortal.Common.Models.Department>
<partial name="_NotificationSuccess" />
@{
    ViewData["Title"] = "Department Directory";

}

<div class="mt-2">
    <div class="row">
        <div class="col-md-7">
            <h2>Department</h2>
        </div>
        <div class="col-md-5">
            <div class="input-group">
                <input type="text" class="form-control py-2" placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-primary py-2" type="button"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a href="/Department/Create" class="btn btn-primary">Create<a />
        </div>
        <div class="col-md-6">
        </div>
    </div>
    <hr />
    <div class="row pb-5 mb-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                <div class="card text-center rounded shadow-sm border-0 p-0">
                    <div class="card-header">
                        <h5 class="card-title"><b>@item.DepartmentName</b></h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-evenly">
                            <a href="@Url.Action("Update", "Department", new { Id = item.Id })"><i class="fa fa-edit  text-warning"></i></a>
                            <a href="@Url.Action("Details", "Department",new { Id = item.Id })"><i class="fa fa-circle-info "></i></a>
                            <a href="@Url.Action("Delete", "Department", new { Id = item.Id })"><i class="fa fa-trash  text-danger"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>