                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" name="email" placeholder="Email Address" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNo">Phone Number</label>
                                <input asp-for="PhoneNo" type="number" class="form-control" id="phoneno" name="phoneno" placeholder="Phone Number" />
                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Age">Age</label>
                                <input asp-for="Age" type="number" class="form-control" id="age" name="age" placeholder="Age" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AadharNo">Aadhar Number</label>
                                <input asp-for="AadharNo" type="number" class="form-control" id="aadharno" name="aadharno" placeholder="Aadhar Number" />
                                <span asp-validation-for="AadharNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Salary">Salary</label>
                                <input asp-for="Salary" type="number" class="form-control" id="salary" name="salary" placeholder="Salary" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DepartmentId">DepartmentId</label>
