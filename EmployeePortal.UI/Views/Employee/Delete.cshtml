@model EmployeePortal.Common.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
    var data = ViewData["department"] as IEnumerable<EmployeePortal.Common.Models.Department>;
}
<partial name="_NotificationSuccess" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="card-header">
                    <h3>Delete Employee Details</h3>
                </div>
                <form asp-action="Delete" asp-controller="Employee" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <input asp-for="Id" value="@Model.Id" type="number" readonly hidden />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FirstName">First Name : <b>@Model.FirstName</b></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LastName">Last Name : <b>@Model.LastName</b></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email">Email Address : <b>@Model.Email</b></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNo">Phone Number : <b>@Model.PhoneNo</b></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Age">Age : <b>@Model.Age</b></label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="AadharNo">Aadhar Number : <b>@Model.AadharNo</b></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Salary">Salary : <b>@Model.Salary</b></label>
                            </div>
                            <div class="form-group">
                                <label>DepartmentName : </label>
                                @foreach (var department in data)
                                {
                                    @if (Model.DepartmentId == department.Id)
                                    {
                                        <b>@department.DepartmentName</b>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Address">Address : <b>@Model.Address</b></label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success register-button" onclick="return confirm('Do you really want to delete this Record?')">Delete</button>
                    <a href="~/Employee/Index" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>
</html>