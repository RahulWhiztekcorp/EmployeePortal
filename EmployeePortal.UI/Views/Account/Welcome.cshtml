
@{
    ViewData["Title"] = "Welcome";
}
<!DOCTYPE html>
<html>
<head>
    <title>Employee Portal Dashboard</title>
    <link rel="stylesheet" href="site.css">
</head>
<body>
    <div class="container-fluid mt-2">
        <header>
            <h1>Welcome, @ViewBag.Username</h1>
        </header>
        <nav>
            <ul>
                <li><a href="#">Profile</a></li>
                <li><a href="/Account/MyTask">My Tasks</a></li>
                <li><a href="#">Messages</a></li>
                <li><a href="#">Calendar</a></li>
            </ul>
        </nav>
        <main>
            <section class="card">
                <h2>Upcoming Tasks</h2>
                <!-- Display a list of upcoming tasks here -->
            </section>
            <section class="card">
                <h2>Messages</h2>
                <!-- Display a list of messages here -->
            </section>
        </main>
        <aside>
            <div class="widget">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="#">Employee Directory</a></li>
                    <li><a href="#">Leave Requests</a></li>
                    <li><a href="#">Settings</a></li>
                </ul>
            </div>
        </aside>
        <footer class="my-2">
            <p>&copy; 2023 Employee Portal</p>
        </footer>
    </div>
</body>
</html>
